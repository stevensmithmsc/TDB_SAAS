@model IEnumerable<TDB_SAAS.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cohort)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Finance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Leader)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoTrain)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoMembers)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cohort.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Finance.CCName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Leader.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoTrain)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NoMembers)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
