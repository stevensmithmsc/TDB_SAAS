@model IEnumerable<TDB_SAAS.Models.Flag>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Flags Index</h2>
<div class="row">
    <div class="col-md-6">
        <h2>Person Flags</h2>
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TheFlag)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TheFlag)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-6">
        <h2>Course Flags</h2>
        <table class="table">
            <tr>
                <th>
                    Code
                </th>
                <th>
                    Flag
                </th>
                <th></th>
            </tr>

            @foreach (var item in ViewBag.CFlags)
            {
                <tr>
                    <td>
                        @item.Code
                    </td>
                    <td>
                        @item.TheFlag
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

